#ifndef INDEXATION_H
#define INDEXATION_H

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_BUFFER_SIZE 1000

//structure d'une cellule
typedef struct cel {
	char* key[MAX_BUFFER_SIZE];
	int value;
	struct cel* ptr_cel;
}cel;

//un histogramme est un pointeur sur une cellule
typedef cel* Histogram; 

//structure d'un descripteur
typedef struct descriptor {
	int id;
	Histogram h;
	int nb_words;
}descriptor;

void get_words(FILE *file);

#endif
